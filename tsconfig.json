{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": ["react"],
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/*"],
      "~/convex/*": ["./convex/_generated/*"],
      "styled-system/*": ["./styled-system/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "dist", "node_modules"]
}
