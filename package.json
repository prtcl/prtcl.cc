{
  "name": "prtcl.cc",
  "version": "3.0.0",
  "description": "Code for prtcl.cc",
  "repository": {
    "type": "git",
    "url": "git@github.com:prtcl/iching.io.git"
  },
  "main": "www/index.html",
  "author": "Cory O'Brien <cory@prtcl.cc>",
  "license": "MIT",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "browserify": "$(npm bin)/browserify app/app.js -s app -d > www/assets/app.js",
    "build": "rm -r www ; mkdir -p www/assets && npm run browserify && npm run sass && npm run hbs:prod && npm run compress",
    "compress": "npm run uglify && npm run cssnano",
    "cssnano": "$(npm bin)/cssnano www/assets/main.css www/assets/main.min.css",
    "dev": "$(npm bin)/parallelshell 'npm run watch' 'npm run start'",
    "hbs:dev": "$(npm bin)/handlebars --prod false < templates/index.hbs > www/index.html",
    "hbs:prod": "$(npm bin)/handlebars --prod true < templates/index.hbs > www/index.html",
    "sass": "$(npm bin)/node-sass scss/main.scss > www/assets/main.css && $(npm bin)/postcss --use autoprefixer -c .postcss.json -m -r www/assets/main.css",
    "start": "cd www && $(npm bin)/static",
    "uglify": "$(npm bin)/uglifyjs www/assets/app.js --compress warnings=false,sequences=true,properties=true,dead_code=true,booleans=true,drop_console=true --mangle --screw-ie8 > www/assets/app.min.js",
    "watch": "$(npm bin)/parallelshell 'npm run watchify' 'npm run watch:sass' 'npm run watch:hbs'",
    "watch:hbs": "$(npm bin)/nodemon -q -w templates/ --ext '.hbs' --exec 'npm run hbs:dev'",
    "watch:sass": "$(npm bin)/nodemon -q -w scss/ --ext '.scss' --exec 'npm run sass'",
    "watchify": "$(npm bin)/watchify app/app.js -v -s app -d -o www/assets/app.js"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-core": "^6.23.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "cssnano-cli": "^1.0.5",
    "eslint": "^3.15.0",
    "handlebars-cmd": "^0.1.4",
    "node-sass": "^4.5.0",
    "node-static": "^0.7.9",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.14",
    "postcss-cli": "^3.0.0-beta",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.9.0"
  }
}
